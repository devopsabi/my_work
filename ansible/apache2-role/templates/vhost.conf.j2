<VirtualHost *:{{ apache_port }}>
    ServerAdmin {{ apache_server_admin }}
    DocumentRoot {{ apache_doc_root }}

    <Directory {{ apache_doc_root }}>
        AllowOverride All
        Require all granted
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
